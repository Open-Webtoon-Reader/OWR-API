{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "entryFile": "app",
    "compilerOptions": {
        "deleteOutDir": true,
        "plugins": [{
            "name": "@nestjs/swagger",
            "options": {
                "dtoFileNameSuffix": [".dto.ts", ".entity.ts", ".response.ts"],
                "introspectComments": true
            }
        }]
    }
}
